doctype html
html(lang='en')
  head
    title Bumbling Bumble Bee with pure CSS
    link(rel='stylesheet' href='./index.scss')
  body
    .universe
      - var i = 0;
      while i++ < 24
        .arrow(class=`arrow-${i}`)
      .bumbling.bee
      .source
        - var sourceUrl = 'https://github.com/pikalaw/bumbling-bumble-bee'
        a(href=`${sourceUrl}`)=sourceUrl

